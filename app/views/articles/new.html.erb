<h1>Create an article</h1>
<!--display for errors-->

<% if @article.errors.any?%>
<ul>
<% @article.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>


<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %> <br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %> <br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <!--create action needed -->
    <%= f.submit %>
  </p>
<% end %>
